<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreReservationActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_reservation_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장 이름"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/button_back"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:id="@+id/textView_reservation_storeName"/>

        <ImageView
            android:id="@+id/imageView_reservation_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView_reservation_storeName"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_reservation_photo"
            android:layout_centerInParent="true"
            android:text="이름"
            android:textSize="25dp"
            android:textColor="#000"
            android:paddingTop="10dp"
            android:id="@+id/textView_reservation_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_reservation_name"
            android:layout_centerInParent="true"
            android:text="한마디"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:id="@+id/textView_reservation_info"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/textView_reservation_info"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_date" />

        <TextView
            android:id="@+id/textView_reservation_regdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_reservation_info"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="6dp"
            android:paddingTop="10dp"
            android:text="날짜 선택"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/img_regdate_check"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/textView_reservation_info"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            android:background="@drawable/btn_click" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#BDBDBD"
            android:layout_below="@id/img_regdate_check"
            android:layout_marginTop="10dp"
            android:id="@+id/view1"/>


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/view1"
            android:layout_marginTop="13dp"
            android:background="@drawable/img_clock" />

        <TextView
            android:id="@+id/textView_reservation_time"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:text="시간 선택"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/img_time_check"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/btn_click" />

        <TextView
            android:id="@+id/textView_dhwjs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="오전"
            android:textSize="20dp"
            android:visibility="gone"
            android:layout_below="@+id/textView_reservation_time"/>

        <Button
            android:id="@+id/button_reservation_0"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/textView_dhwjs"
            android:layout_marginLeft="18dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="11:00" />

        <TextView
            android:id="@+id/textView_dhgn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_reservation_0"
            android:visibility="gone"
            android:padding="10dp"
            android:text="오후"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_reservation_1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/textView_dhgn"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="18dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="12:00" />

        <Button
            android:id="@+id/button_reservation_2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/textView_dhgn"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="4dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="1:00" />

        <Button
            android:id="@+id/button_reservation_3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/textView_dhgn"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="219dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="2:00" />

        <Button
            android:id="@+id/button_reservation_4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/textView_dhgn"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="314dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="3:00" />

        <Button
            android:id="@+id/button_reservation_5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/button_reservation_4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="4:00" />

        <Button
            android:id="@+id/button_reservation_6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/button_reservation_4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="114dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="5:00" />

        <Button
            android:id="@+id/button_reservation_7"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/button_reservation_4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="219dp"
            android:background="#4AB34A"
            android:visibility="gone"
            android:text="6:00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시술 선택"
            android:textSize="20dp"
            android:textColor="#000"
            android:padding="10dp"
            android:id="@+id/textView_tltnf"
            android:visibility="gone"
            android:layout_below="@id/button_reservation_7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="컷"
            android:textSize="30dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:layout_below="@+id/textView_tltnf"
            android:visibility="gone"
            android:id="@+id/textView_cut"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="펌"
            android:textSize="30dp"
            android:layout_marginLeft="111dp"
            android:layout_below="@id/textView_tltnf"
            android:visibility="gone"
            android:id="@+id/textView_perm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="컬러"
            android:textSize="30dp"
            android:layout_below="@id/textView_tltnf"
            android:visibility="gone"
            android:layout_marginLeft="200dp"
            android:id="@+id/textView_chlorination"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클리닉"
            android:textSize="30dp"
            android:layout_below="@id/textView_tltnf"
            android:visibility="gone"
            android:layout_marginLeft="300dp"
            android:id="@+id/textView_clinic"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_clinic"
            android:visibility="gone"
            android:id="@+id/listView_reservation"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView_clinic"
            android:text="해당 시술이 등록되지 않았습니다"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/textView_noSurgery"
            android:visibility="gone"/>

    </RelativeLayout>

</ScrollView>