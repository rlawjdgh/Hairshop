<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreReservationActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/vmfpdla">

            <Button
                android:id="@+id/button_reservation_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_back"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장 이름"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:id="@+id/textView_reservation_storeName"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView_reservation_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/vmfpdla"
            android:scaleType="fitXY"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_reservation_photo"
            android:layout_centerInParent="true"
            android:text="이름"
            android:textSize="25dp"
            android:textColor="#000"
            android:paddingTop="10dp"
            android:id="@+id/textView_reservation_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_reservation_name"
            android:layout_centerInParent="true"
            android:text="한마디"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:id="@+id/textView_reservation_info"/>

           <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_reservation_info"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:id="@+id/freamlayout">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_date" />

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/img_regdate"/>

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:background="@drawable/btn_click"
                   android:layout_marginLeft="340dp"
                   android:id="@+id/img_regdate_check"
                   android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜 선택"
                android:textSize="27dp"
                android:layout_below="@id/textView_reservation_info"
                android:layout_marginLeft="50dp"
                android:paddingTop="10dp"
                android:id="@+id/textView_reservation_regdate"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#BDBDBD"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/freamlayout"
            android:paddingLeft="5dp"
            android:id="@+id/freamlayout2"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_clock" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_time"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_click"
                android:layout_marginLeft="340dp"
                android:id="@+id/img_time_check"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간 선택"
                android:textSize="27dp"
                android:layout_below="@id/textView_reservation_info"
                android:layout_marginLeft="50dp"
                android:paddingTop="10dp"
                android:id="@+id/textView_reservation_time"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#BDBDBD"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/relative_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/freamlayout2"
            android:visibility="gone">

            <TextView
                android:id="@+id/dhwjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="오전"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_reservation_0"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dhwjs"
                android:layout_marginLeft="20dp"
                android:text="11:00" />

            <TextView
                android:id="@+id/dhgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_reservation_0"
                android:padding="10dp"
                android:text="오후"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_reservation_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dhgn"
                android:layout_marginLeft="15dp"
                android:text="12:00" />

            <Button
                android:id="@+id/button_reservation_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dhgn"
                android:layout_marginLeft="111dp"
                android:text="1:00" />

            <Button
                android:id="@+id/button_reservation_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dhgn"
                android:layout_marginLeft="215dp"
                android:text="2:00" />

            <Button
                android:id="@+id/button_reservation_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dhgn"
                android:layout_marginLeft="310dp"
                android:text="3:00" />

            <Button
                android:id="@+id/button_reservation_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_reservation_4"
                android:layout_marginLeft="15dp"
                android:text="4:00" />

            <Button
                android:id="@+id/button_reservation_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_reservation_4"
                android:layout_marginLeft="111dp"
                android:text="5:00" />

            <Button
                android:id="@+id/button_reservation_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_reservation_4"
                android:layout_marginLeft="215dp"
                android:text="6:00" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative_time"
            android:id="@+id/relative_surgery"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시술 선택"
                android:textSize="20dp"
                android:textColor="#000"
                android:padding="10dp"
                android:id="@+id/reservation_tltnf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/reservation_tltnf"
                android:id="@+id/linear">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="컷"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:id="@+id/textView_cut"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펌"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:id="@+id/textView_perm"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="컬러"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:id="@+id/textView_chlorination"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="클리닉"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:id="@+id/textView_clinic"/>
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear"
                android:id="@+id/listView_reservation"/>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>