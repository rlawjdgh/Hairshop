<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFF00"
            android:gravity="center"
            android:text="스텝 등록하기"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 이름"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:id="@+id/editText_staff_name"
                    android:layout_width="121dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext2"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 직급"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:id="@+id/editText_staff_grade"
                    android:layout_width="135dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext2"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 한마디"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/editText_staff_info"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext2"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 사진"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp"
            android:paddingBottom="10dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView_staff_photo"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:background="#e0e0e0"
                android:clickable="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_add_picture"
                android:id="@+id/imageView_staff_plus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첨부할 사진을 선택하세요."
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="115dp"
                android:textSize="18dp"
                android:textColor="#000"
                android:id="@+id/textView_staff"/>
        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:text="추가하기"
            android:id="@+id/button_staff_add"
            android:layout_marginTop="30dp"
            android:background="#ff7800"/>

    </LinearLayout>

</ScrollView>