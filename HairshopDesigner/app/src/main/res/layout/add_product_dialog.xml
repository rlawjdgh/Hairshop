<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFF00"
            android:gravity="center"
            android:text="시술 추가"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 이름"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext2"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/editText_product_name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 가격"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/editText_product_price"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext2"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 제품 사진"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp"
            android:paddingBottom="10dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:background="#e0e0e0"
                android:clickable="true"
                android:id="@+id/imageView_add_product"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_add_picture"
                android:id="@+id/imageView_add"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첨부할 사진을 선택하세요."
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="115dp"
                android:textSize="18dp"
                android:textColor="#000"
                android:id="@+id/textView_add"/>
        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:text="추가하기"
            android:id="@+id/button_add_product"
            android:layout_marginTop="30dp"
            android:background="#ff7800"/>

    </LinearLayout>

</ScrollView>